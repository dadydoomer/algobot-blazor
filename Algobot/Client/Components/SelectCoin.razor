@using Algo.Bot.Domain.Models;

@if (Symbols.Count > 0)
{
    <MudCarousel @ref="_carousel" ItemsSource="@Symbols" SelectedIndexChanged="@SymbolIndexChanged" Style="height:200px; width: 50%;" ShowArrows="true" ShowBullets="false" EnableSwipeGesture="true" AutoCycle="false">
        <ItemTemplate>
            <div class="d-flex flex-column flex-column justify-center align-center gap-1" style="height:100%">
                <MudImage Height="25" Width="25" Src="https://s2.coinmarketcap.com/static/img/coins/64x64/825.png"></MudImage>
                <MudText Align="@Align.Center" Class="mx-auto">@context</MudText>
            </div>
        </ItemTemplate>
    </MudCarousel>
}

@code {
    private MudCarousel<string> _carousel = null!;

    [Parameter]
    public string SelectedSymbol { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public List<string> Symbols { get; set; } = new List<string>();

    [Parameter, EditorRequired]
    public EventCallback<int> SymbolIndexChanged { get; set; }
}